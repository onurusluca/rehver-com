---
import { t } from "@/utils/i18n";
import { Icon } from "astro-icon/components";

import LangSwitcher from "@/components/nav/LangSwitcher.astro";
import Logo from "@/components/Logo.astro";

interface Props {
  locale: "tr" | "en";
}

const { locale } = Astro.props;

const footerLinks = {
  discover: {
    title: t("footer.discover.title", locale),
    links: [
      {
        label: t("footer.discover.home", locale),
        path: "/",
      },
      {
        label: t("footer.discover.discover", locale),
        path: locale === "en" ? "/en/discover" : "/kesfet",
      },
    ],
  },
  company: {
    title: t("footer.company.title", locale),
    links: [
      {
        label: t("footer.company.about", locale),
        path: locale === "en" ? "/en/about" : "/about",
      },
      {
        label: t("footer.company.contact", locale),
        path: locale === "en" ? "/en/contact" : "/contact",
      },
    ],
  },
};

const socialLinks = [
  {
    name: "Twitter",
    icon: "tabler:brand-twitter",
    url: "https://twitter.com/rehvercom",
  },
  {
    name: "Instagram",
    icon: "tabler:brand-instagram",
    url: "https://instagram.com/rehvercom",
  },
  {
    name: "Facebook",
    icon: "tabler:brand-facebook",
    url: "https://facebook.com/rehvercom",
  },
];

const otherLocale = locale === "tr" ? "en" : "tr";
const currentPath = Astro.url.pathname.replace(/^\/en/, "") || "/";
const switchUrl = locale === "tr" ? `/en${currentPath}` : currentPath;
---

<footer
  class="bg-gradient-to-br from-primary-100 via-white to-primary-50 border-t border-primary-100"
>
  <div class="mx-auto max-w-7xl px-4 py-16">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-12">
      <!-- Brand Section -->
      <div class="lg:col-span-4">
        <div class="space-y-6">
          <Logo locale={locale} />

          <p class="max-w-md leading-relaxed text-gray-600">
            {t("footer.description", locale)}
          </p>

          <div class="flex items-center gap-4">
            <div class="flex gap-3">
              {
                socialLinks.map((social) => (
                  <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex h-10 w-10 items-center justify-center rounded-xl border border-primary-100 bg-white text-gray-400 shadow-sm transition-all duration-300 hover:scale-105 hover:border-primary-500 hover:bg-primary-500 hover:text-white hover:shadow-lg hover:shadow-primary-500/25"
                    aria-label={`${t("footer.followUs", locale)} ${social.name}`}
                  >
                    <Icon name={social.icon} class="w-5 h-5" />
                  </a>
                ))
              }
            </div>

            <div class="h-6 w-px bg-gray-300"></div>

            <!-- Language Switcher -->
            <LangSwitcher />
          </div>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="lg:col-span-8">
        <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 lg:grid-cols-4">
          <div class="space-y-4">
            <h3
              class="text-xs font-semibold uppercase tracking-wider text-gray-900 whitespace-nowrap"
            >
              {footerLinks.discover.title}
            </h3>
            <ul class="space-y-3">
              {
                footerLinks.discover.links.map((link) => (
                  <li>
                    <a
                      href={link.path}
                      class="text-sm text-gray-600 hover:text-primary-600 transition-colors"
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="space-y-4">
            <h3
              class="text-xs font-semibold uppercase tracking-wider text-gray-900 whitespace-nowrap"
            >
              {footerLinks.company.title}
            </h3>
            <ul class="space-y-3">
              {
                footerLinks.company.links.map((link) => (
                  <li>
                    <a
                      href={link.path}
                      class="text-sm text-gray-600 hover:text-primary-600 transition-colors"
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-12 pt-8 border-t border-primary-100">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-xs text-gray-500">
          © {new Date().getFullYear()} Rehver. {t("footer.rights", locale)}
        </p>
        <div class="flex items-center gap-6 text-xs">
          <a
            href={locale === "en" ? "/en/privacy" : "/privacy"}
            class="text-gray-500 hover:text-primary-600 transition-colors"
          >
            {t("footer.company.privacy", locale)}
          </a>
          <span class="text-gray-300">•</span>
          <a
            href={locale === "en" ? "/en/terms" : "/terms"}
            class="text-gray-500 hover:text-primary-600 transition-colors"
          >
            {t("footer.company.terms", locale)}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
