---
import { t, localePath } from "@/utils/i18n";
import { Icon } from "astro-icon/components";

interface Props {
  locale: "tr" | "en";
  query?: string;
}

const { locale, query = "" } = Astro.props;
const searchPath = locale === "en" ? "/en/search" : "/arama";
---

<form method="GET" action={searchPath} class="w-full">
  <div class="relative">
    <input
      type="search"
      name="q"
      value={query}
      placeholder={t("search.placeholder", locale)}
      class="w-full px-4 py-2 pl-10 pr-4 text-gray-900 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
      autocomplete="off"
    />
    <div class="absolute inset-y-0 left-0 flex items-center pl-3">
      <Icon name="tabler:search" class="w-5 h-5 text-gray-400" />
    </div>
  </div>
</form>
