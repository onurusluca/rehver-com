---
import { t, localePath } from "@/utils/i18n";
import { Icon } from "astro-icon/components";
import type { Place, SearchResult } from "@/types";

interface Props {
  place: Place | SearchResult;
  locale: "tr" | "en";
}

const { place, locale } = Astro.props;

const getDescription = (place: Place | SearchResult) => {
  return locale === "tr" ? place.description_tr : place.description_en;
};

const getImageUrl = (place: Place | SearchResult) => {
  if ("image_url" in place) return place.image_url;
  if ("image_urls" in place) return place.image_urls?.[0];
  return undefined;
};

const placePath = localePath(`/yerler/${place.slug}`, locale);
---

<a
  href={placePath}
  class="group block bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-200
hover:scale-[1.02] border border-gray-200"
>
  <div class="aspect-[4/3] overflow-hidden rounded-t-lg">
    {
      getImageUrl(place) ? (
        <img
          src={getImageUrl(place)}
          alt={place.name}
          class="w-full h-full object-cover transition-transform group-hover:scale-110"
          loading="lazy"
          width="300"
          height="200"
        />
      ) : (
        <div class="w-full h-full bg-gray-100 flex items-center justify-center">
          <Icon name="tabler:photo" class="w-8 h-8 text-gray-400" />
        </div>
      )
    }
  </div>

  <div class="p-4">
    <h3
      class="font-semibold text-black group-hover:text-primary-600 transition-colors mb-1"
    >
      {place.name}
    </h3>

    {
      getDescription(place) && (
        <p class="text-sm text-gray-600 mb-2 line-clamp-2">
          {getDescription(place)}
        </p>
      )
    }

    <div class="flex items-center justify-between text-xs text-gray-500 mb-2">
      <span class="flex items-center gap-1">
        <Icon name="tabler:map-pin" class="w-3 h-3" />
        {place.district}, {place.city}
      </span>

      {
        place.rating && (
          <span class="flex items-center gap-1">
            <Icon name="tabler:star-filled" class="w-3 h-3 text-yellow-400" />
            {place.rating}
          </span>
        )
      }
    </div>

    <div class="mt-2">
      <span
        class="bg-primary-100 text-primary-700 text-xs font-medium px-2 py-0.5 rounded-full"
      >
        {place.main_category}
      </span>
    </div>
  </div>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</a>
