---
import MainLayout from "@/layouts/MainLayout.astro";
import { t, getLocaleFromUrl } from "@/utils/i18n";
import { Icon } from "astro-icon/components";

const locale = getLocaleFromUrl(Astro.url);
---

<MainLayout
  title={t("error.404.title", locale)}
  description={t("error.404.description", locale)}
>
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
      <div
        class="w-24 h-24 mx-auto mb-6 bg-primary-100 rounded-full flex items-center justify-center"
      >
        <Icon name="tabler:map-off" class="w-12 h-12 text-primary-600" />
      </div>

      <h1 class="text-4xl font-bold text-black mb-4">404</h1>
      <h2 class="text-xl font-semibold text-gray-700 mb-4">
        {t("error.404.title", locale)}
      </h2>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        {t("error.404.description", locale)}
      </p>

      <div class="space-y-3">
        <a
          href={locale === "en" ? "/en" : "/"}
          class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg transition-colors"
        >
          <Icon name="tabler:home" class="w-4 h-4" />
          {t("error.404.goHome", locale)}
        </a>

        <div>
          <a
            href={`${locale === "en" ? "/en" : ""}/discover`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 px-4 py-2 rounded-lg transition-colors"
          >
            <Icon name="tabler:compass" class="w-4 h-4" />
            {t("error.404.discover", locale)}
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
