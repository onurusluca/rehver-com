---
import BaseLayout from "./BaseLayout.astro";
import Header from "@/components/nav/Header.astro";
import Footer from "@/components/nav/Footer.astro";
import { getLocaleFromUrl } from "@/utils/i18n";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const locale = getLocaleFromUrl(Astro.url);
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  locale={locale}
>
  <div class="flex min-h-screen flex-col bg-layout-bg">
    <Header />
    <main class="flex-grow pt-20 pb-8">
      <div class="mx-auto max-w-7xl px-4">
        <slot />
      </div>
    </main>
    <Footer locale={locale} />
  </div>
</BaseLayout>
